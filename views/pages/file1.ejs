<div class="header-container">
    
      <img src="https://cdn.hipwallpaper.com/i/1/38/NRITfi.png" alt="header picture" id="header-pic">

         <div class="flip-card">
        <div class="top-container">
            <div id="sign-up" onclick="sign()">sign up</div>
            <div id="log-in" onclick="log()">log in</div>
        </div> 
       <div id="flip-card-inner">
            <form action="/ejs" method="POST" >
                <div id="inputs-container">
                    <%if(locals.test){%>
                        <p class="error"><%=test %></p>
                        <%}%>
                <input type="email" placeholder="enter your email" id="email-log" name="email" ><br>
                <div id="span-div">
                    <span id="email-error-log">*required</span>
                </div>
                <input type="password" placeholder="enter your password" name="password" id="password-log"> <br>
                <div id="span-div">
                    <span id="error-password-log">Your password must have numbers , letters and symbols</span>
                </div><br><br>
                <button  id="btn-log-in" >log in</button>
                </div>
            </form> 

         <div id="flip-card-back">
        <form action="/" method="POST">
            <%if(locals.error){%>
            <p class="error"><%=error %></p>
            <%}%>
            <div id="inputs-container1">
                <input type="text" placeholder="user name" id="user-sign" name="name">
                <div id="span-div" >
                    <span id="user-error-sign">*name cabitilaized</span>
                </div>
                <input type="email" placeholder="enter your email" id="email-sign"  name="email"> <br>
                <div id="span-div">
                    <span id="error-email-sign">*required</span>
                </div>
                <input type="password"  id="password-sign" placeholder="enter your password"  name="password">
                <div id="span-div">
                    <span id="error-password-sign">Your password must have numbers , letters and symbols</span>  
                </div><br><br>
                <button  id="btn-sign-up" >sign up</button> 
            </div>
        </form>        
        </div>
        </div>
</div>
